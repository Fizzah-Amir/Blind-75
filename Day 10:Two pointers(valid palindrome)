 bool isPalindrome(string& s) {
    string c;
    char o;
    for (int i = 0; i < s.size(); i++) {
        if ((s[i] >= 'A' && s[i] <= 'Z')) {
            o = s[i] + 32;
            c = c + o;
        }
        if (s[i] >= 'a' && s[i] <= 'z') {
            c = c + s[i];
            }
        if (s[i] >= '0' && s[i] <= '9'){
            c = c + s[i];
        }
    }
    int a = 0;
    bool flg = true;
    int b = c.size() - 1;
    while (a < b) {
        if (c[a] != c[b]) {
            flg = false;
            break;
        }
        a++;
        b--;
    }
    if (flg) {
        return true;
    }
    else {
        return false;
    }
}
};
